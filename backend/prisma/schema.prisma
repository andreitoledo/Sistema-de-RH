generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  password  String
  role      String
  createdAt DateTime @default(now())
}

model Employee {
  id          Int      @id @default(autoincrement())
  name        String
  position    String
  department  String
  salary      Float
  phone       String
  email       String   @unique
  birthday    DateTime
  hiredAt     DateTime
  status      Boolean  @default(true)
  createdAt   DateTime @default(now())
}

